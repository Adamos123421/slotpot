# Backend Server Configuration
PORT=5000
NODE_ENV=production

# TON Network Configuration
TON_ENDPOINT=https://testnet.toncenter.com/api/v2/jsonRPC
TON_API_KEY=your_ton_api_key_here

# Alternative TON endpoints (uncomment to use)
# TON_ENDPOINT=https://toncenter.com/api/v2/jsonRPC  # Mainnet
# TON_ENDPOINT=https://testnet.tonhubapi.com/jsonRPC  # Alternative testnet

# Smart Contract Configuration
CONTRACT_ADDRESS=EQBSIh8iZ1nzFkEJJsniBjj5AmQjgJm5IrX9Wia4kzzZhwwI

# Admin Wallet Configuration (KEEP SECURE!)
ADMIN_MNEMONIC=word1 word2 word3 ... word24

# Automation Settings - Tuned for Rate Limiting
ROUND_DURATION=300          # 5 minutes per round
MIN_BETS_TO_END=2          # Minimum bets required
CHECK_INTERVAL=120         # Check every 2 minutes (increased from 60 to reduce load)

# Rate Limiting Protection - Aggressive Settings
REQUEST_DELAY=4000         # 4 seconds between contract requests (increased from 3s)
MAX_RETRIES=3              # Maximum retry attempts for failed requests

# Security
ADMIN_API_KEY=your_secure_admin_api_key_for_emergency_controls

# Performance Settings
CACHE_DURATION=30000       # 30 seconds cache duration for contract state
CONTRACT_CACHE_DURATION=15000  # 15 seconds cache for contract service

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_BOT_USERNAME=YourBot
TELEGRAM_MINIAPP_NAME=YourMiniApp

# Database (if you add one later)
# DATABASE_URL=postgresql://username:password@localhost:5432/slotpot

# MongoDB (for player stats and game tracking)
# Example:
# mongodb+srv://<db_username>:<db_password>@cluster0.q4vl70l.mongodb.net/?retryWrites=true&w=majority&appName=Cluster0
MONGODB_URI=
MONGODB_DB_NAME=slotpot

# Debugging
DEBUG_RATE_LIMITING=true   # Set to false in production 